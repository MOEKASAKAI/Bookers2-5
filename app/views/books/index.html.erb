<div class="container">
  <div class="row">
    <div class="text-danger">
      <% if @book.errors.any? %>
        <%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:
        <li>
          <% @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        </li>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'shares/userinfo', user: @user %>
      
      <h2>New book</h2>
      <%= render 'shares/listnewbook', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <%= render 'shares/search_form' %>
      <h2>Books</h2>
      <%= render 'shares/booklist', books: @books %>
    </div>
  </div>
</div>